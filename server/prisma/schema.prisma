generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int           @id @default(autoincrement())
  name      String
  email     String        @unique
  password  String
  ledger    LedgerEntry[]
  createdAt DateTime      @default(now())
}

model LedgerEntry {
  id             String    @id @default(uuid())
  user           User      @relation(fields: [userId], references: [id])
  userId         Int
  date           DateTime
  amount         Float
  type           String
  mainCategory   String
  subCategory    String
  description    String?
  createdFromAI  Boolean   @default(false)
}



